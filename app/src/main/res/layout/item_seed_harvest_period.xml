<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/bg_10_dark"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="@dimen/dp_5"
    android:paddingEnd="@dimen/dp_10">
    <com.example.cabbage.utils.MyGridView
        android:id="@+id/img_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="4"
        android:verticalSpacing="5dp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:layout_height="wrap_content"
            android:text="@string/info_seed_pod_length" />

            <LinearLayout style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/seed_pod_length"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/seed_pod_length" />

                <include layout="@layout/view_vertical_divider" />

                <com.example.cabbage.view.AutoClearEditText
                    android:id="@+id/edt_seed_pod_length"
                    style="@style/style_number_edit_text" />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_seed_pod_length"
                    style="@style/style_basic_help_btn"
                    android:layout_width="34dp" />

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/info_seed_pod_beak_length" />

            <LinearLayout style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/seed_pod_beak_length"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/seed_pod_beak_length" />

                <include layout="@layout/view_vertical_divider" />

                <com.example.cabbage.view.AutoClearEditText
                    android:id="@+id/edt_seed_pod_beak_length"
                    style="@style/style_number_edit_text" />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_seed_pod_beak_length"
                    style="@style/style_basic_help_btn" />

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/info_seed_size" />

            <LinearLayout style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/seed_size"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/seed_size" />

                <include layout="@layout/view_vertical_divider" />

                <com.example.cabbage.view.AutoClearEditText
                    android:id="@+id/edt_seed_size"
                    style="@style/style_number_edit_text" />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_seed_size"
                    style="@style/style_basic_help_btn" />

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/info_seed_shape" />

            <LinearLayout style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/seed_shape"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/seed_shape" />

                <include layout="@layout/view_vertical_divider" />

                <com.example.cabbage.view.AutoClearEditText
                    android:id="@+id/edt_seed_shape"
                    style="@style/style_user_define_edit_text" />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_seed_shape"
                    style="@style/style_basic_help_btn" />

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/info_seed_color" />

            <LinearLayout style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/seed_color"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/seed_color" />

                <include layout="@layout/view_vertical_divider" />

                <com.example.cabbage.view.AutoClearEditText
                    android:id="@+id/edt_seed_color"
                    style="@style/style_user_define_edit_text" />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_seed_color"
                    style="@style/style_basic_help_btn" />

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/info_seed_rate" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@drawable/bg_10_light"
                android:elevation="@dimen/dp_2"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/edt_seed_rate"
                    style="@style/style_item_basic_info_edit_text"
                    android:layout_width="60dp"
                    android:inputType="numberDecimal" />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_seed_rate"
                    style="@style/style_basic_help_btn" />

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/info_single_seed_pod_rate" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@drawable/bg_10_light"
                android:elevation="@dimen/dp_2"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/edt_single_seed_pod_rate"
                    style="@style/style_item_basic_info_edit_text"
                    android:layout_width="60dp"
                    android:inputType="numberDecimal" />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_single_seed_pod_rate"
                    style="@style/style_basic_help_btn" />

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/info_petal_count" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@drawable/bg_10_light"
                android:elevation="@dimen/dp_2"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/edt_petal_count"
                    style="@style/style_item_basic_info_edit_text"
                    android:layout_width="60dp"
                    android:inputType="numberDecimal" />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_petal_count"
                    style="@style/style_basic_help_btn" />

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/info_self_compatible" />

            <LinearLayout style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/self_compatible"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/self_compatible" />

                <include layout="@layout/view_vertical_divider" />

                <com.example.cabbage.view.AutoClearEditText
                    android:id="@+id/edt_self_compatible"
                    style="@style/style_number_edit_text" />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_self_compatible"
                    style="@style/style_basic_help_btn" />

            </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_custom_attribute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.cabbage.view.CountButton
            android:id="@+id/btn_add_attribute"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_button_red"
            android:text="@string/add_attribute"
            android:textColor="@color/white" />

        <com.example.cabbage.view.CountButton
            android:id="@+id/btn_add_remark"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_button_red"
            android:text="@string/add_remark"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_upload_data"
        style="@style/Button_Red"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/dp_10"
        android:text="@string/upload_data" />
</LinearLayout>