<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/bg_10_dark"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_long_text_view"
            android:text="@string/info_germination_rate" />

        <!--        <View style="@style/view_vertical_divider_style" />-->

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@drawable/bg_10_light"
                android:elevation="@dimen/dp_2"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/edt_germination_rate"
                    style="@style/style_item_basic_info_edit_text"
                    android:layout_width="60dp"
                    android:inputType="numberDecimal" />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_germination_rate"
                    style="@style/style_basic_help_btn" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_custom_attribute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.cabbage.view.CountButton
            android:id="@+id/btn_add_attribute"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_button_red"
            android:text="@string/add_attribute"
            android:textColor="@color/white" />

        <com.example.cabbage.view.CountButton
            android:id="@+id/btn_add_remark"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_button_red"
            android:text="@string/add_remark"
            android:textColor="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_upload_data"
        style="@style/Button_Red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="@string/upload_data" />
</LinearLayout>