<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_seedling_period"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_cotyledon_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_basicinfo_textview"
            android:text="@string/info_cotyledon_size" />

        <View style="@style/view_vertical_divider_style" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/cotyledon_size"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/size" />

                <include layout="@layout/view_vertical_divider" />

                <EditText
                    android:id="@+id/edt_cotyledon_size"
                    style="@style/style_user_define_edit_text"
                    android:hint="@string/user_define" />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_cotyledon_size"
                    style="@style/style_basic_help_btn" />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_add_cotyledon_size"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:background="@mipmap/ic_round_add" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_repeated_cotyledon_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/layout_cotyledon_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_basicinfo_textview"
            android:text="@string/info_cotyledon_color" />

        <View style="@style/view_vertical_divider_style" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout
                style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/cotyledon_color"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/cotyledon_color" />

                <include layout="@layout/view_vertical_divider" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/img_cotyledon_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include layout="@layout/view_vertical_divider" />

                <EditText
                    android:id="@+id/edt_cotyledon_color"
                    style="@style/style_user_define_edit_text" />

                <include layout="@layout/view_vertical_divider" />


                <Button
                    android:id="@+id/btn_cotyledon_color"
                    style="@style/style_basic_help_btn" />

                <include layout="@layout/view_vertical_divider" />


                <Button
                    android:id="@+id/btn_add_cotyledon_color"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:background="@mipmap/ic_round_add"
                    android:visibility="gone" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_repeated_cotyledon_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_basicinfo_textview"
            android:text="@string/info_cotyledon_count" />

        <View style="@style/view_vertical_divider_style" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout
                style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/cotyledon_count"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/cotyledon_count" />

                <include layout="@layout/view_vertical_divider" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/img_cotyledon_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include layout="@layout/view_vertical_divider" />


                <EditText
                    android:id="@+id/edt_cotyledon_count"
                    style="@style/style_item_basicinfo_edittext"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:hint="@string/number_value" />

                <include layout="@layout/view_vertical_divider" />


                <Button
                    android:id="@+id/btn_cotyledon_count"
                    style="@style/style_basic_help_btn" />

                <include layout="@layout/view_vertical_divider" />


                <Button
                    android:id="@+id/btn_add_cotyledon_count"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:background="@mipmap/ic_round_add"
                    android:visibility="gone" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_repeated_cotyledon_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_basicinfo_textview"
            android:text="@string/info_cotyledon_shape" />

        <View style="@style/view_vertical_divider_style" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout
                style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/cotyledon_shape"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/cotyledon_shape" />

                <include layout="@layout/view_vertical_divider" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/img_cotyledon_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include layout="@layout/view_vertical_divider" />

                <EditText
                    android:id="@+id/edt_cotyledon_shape"
                    style="@style/style_user_define_edit_text"  />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_cotyledon_shape"
                    style="@style/style_basic_help_btn" />

                <include layout="@layout/view_vertical_divider" />


                <Button
                    android:id="@+id/btn_add_cotyledon_shape"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:background="@mipmap/ic_round_add"
                    android:visibility="gone" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_repeated_cotyledon_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_basicinfo_textview"
            android:text="@string/info_heart_leaf_color" />

        <View style="@style/view_vertical_divider_style" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout
                style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/heart_leaf_color"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/heart_leaf_color" />

                <include layout="@layout/view_vertical_divider" />

                <EditText
                    android:id="@+id/edt_heart_leaf_color"
                    style="@style/style_user_define_edit_text" />

                <include layout="@layout/view_vertical_divider" />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_heart_leaf_color"
                    style="@style/style_basic_help_btn" />

                <include layout="@layout/view_vertical_divider" />


                <Button
                    android:id="@+id/btn_add_heart_leaf_color"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:background="@mipmap/ic_round_add"
                    android:visibility="gone" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_repeated_heart_leaf_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_basicinfo_textview"
            android:text="@string/info_true_leaf_color" />

        <View style="@style/view_vertical_divider_style" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout
                style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/true_leaf_color"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/true_leaf_color" />

                <include layout="@layout/view_vertical_divider" />

                <EditText
                    android:id="@+id/edt_true_leaf_color"
                    style="@style/style_user_define_edit_text"  />

                <include layout="@layout/view_vertical_divider" />

                <Button
                    android:id="@+id/btn_true_leaf_color"
                    style="@style/style_basic_help_btn" />

                <include layout="@layout/view_vertical_divider" />


                <Button
                    android:id="@+id/btn_add_true_leaf_color"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:background="@mipmap/ic_round_add"
                    android:visibility="gone" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_repeated_true_leaf_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_basicinfo_textview"
            android:text="@string/info_true_leaf_length" />

        <View style="@style/view_vertical_divider_style" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout
                style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/true_leaf_length"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/true_leaf_length" />

                <include layout="@layout/view_vertical_divider" />


                <EditText
                    android:id="@+id/edt_true_leaf_length"
                    style="@style/style_item_basicinfo_edittext"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:hint="@string/number_value"
                    android:inputType="number" />

                <include layout="@layout/view_vertical_divider" />


                <Button
                    android:id="@+id/btn_true_leaf_length"
                    style="@style/style_basic_help_btn" />

                <include layout="@layout/view_vertical_divider" />


                <Button
                    android:id="@+id/btn_add_true_leaf_length"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:background="@mipmap/ic_round_add" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_repeated_true_leaf_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_basicinfo_textview"
            android:text="@string/info_true_leaf_width" />

        <View style="@style/view_vertical_divider_style" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout
                style="@style/survey_linear_layout">

                <Spinner
                    android:id="@+id/true_leaf_width"
                    style="@style/style_basic_spinner1"
                    android:layout_width="60dp"
                    android:entries="@array/true_leaf_width" />

                <include layout="@layout/view_vertical_divider" />


                <EditText
                    android:id="@+id/edt_true_leaf_width"
                    style="@style/style_item_basicinfo_edittext"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:hint="@string/number_value"
                    android:inputType="number" />

                <include layout="@layout/view_vertical_divider" />


                <Button
                    android:id="@+id/btn_true_leaf_width"
                    style="@style/style_basic_help_btn"/>

                <include layout="@layout/view_vertical_divider" />


                <Button
                    android:id="@+id/btn_add_true_leaf_width"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:background="@mipmap/ic_round_add" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_repeated_true_leaf_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/layout_custom_attribute3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="vertical" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <Button
            android:id="@+id/btn_add_attribute3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/bg_button_red"
            android:text="@string/add_attribute"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_add_remark3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/bg_button_red"
            android:text="@string/add_remark"
            android:textColor="@color/white" />
    </GridLayout>

</LinearLayout>