<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_10_light"
    android:layout_margin="@dimen/dp_5">

    <TextView
        android:id="@+id/txt_materialType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_materialNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/txt_materialType"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_plantNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/txt_materialNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_investigatingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_materialType" />

    <TextView
        android:id="@+id/txt_investigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/txt_investigatingTime"
        app:layout_constraintTop_toBottomOf="@id/txt_materialType" />

    <TextView
        android:id="@+id/txt_obsPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/txt_investigator"
        app:layout_constraintTop_toBottomOf="@id/txt_materialType" />
</androidx.constraintlayout.widget.ConstraintLayout>