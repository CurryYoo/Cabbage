<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_basicinfo_textview"
            android:text="@string/info_plant_shape" />

        <View style="@style/view_vertical_divider_style" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@drawable/bg_10_light"
                android:elevation="@dimen/dp_2"
                android:gravity="center_vertical">

                <Spinner
                    android:id="@+id/plant_shape"
                    style="@style/style_basic_spinner1"
                    android:layout_width="100dp"
                    android:entries="@array/plant_shape" />

                <EditText
                    android:id="@+id/edit_plant_shape"
                    style="@style/style_item_basicinfo_edittext"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:hint="自定义"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_plant_shape"
                    style="@style/style_basic_album_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_help" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
