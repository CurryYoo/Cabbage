<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/bg_10_dark"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="@dimen/dp_5"
    android:paddingEnd="@dimen/dp_10">

    <com.example.cabbage.utils.MyGridView
        android:id="@+id/img_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center"
        android:numColumns="4"
        android:verticalSpacing="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/info_loss_rate" />

        <LinearLayout style="@style/survey_linear_layout">

            <Spinner
                android:id="@+id/loss_rate"
                style="@style/style_basic_spinner1"
                android:layout_width="60dp"
                android:entries="@array/loss_rate" />

            <include layout="@layout/view_vertical_divider" />

            <com.example.cabbage.view.AutoClearEditText
                android:id="@+id/edt_loss_rate"
                style="@style/style_number_edit_text" />

            <include layout="@layout/view_vertical_divider" />

            <Button
                android:id="@+id/btn_loss_rate"
                style="@style/style_basic_help_btn" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_custom_attribute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.cabbage.view.CountButton
            android:id="@+id/btn_add_attribute"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_button_red"
            android:text="@string/add_attribute"
            android:textColor="@color/white" />

        <com.example.cabbage.view.CountButton
            android:id="@+id/btn_add_remark"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_button_red"
            android:text="@string/add_remark"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_upload_data"
        style="@style/Button_Red"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/dp_10"
        android:text="@string/upload_data" />
</LinearLayout>