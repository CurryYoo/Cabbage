<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_basic_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/bg_10_dark"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/info_material_id" />

        <View style="@style/view_vertical_divider_style" />

        <EditText
            android:id="@+id/edt_material_id"
            style="@style/style_item_basic_info_edit_text"
            android:layout_width="match_parent"
            android:focusable="false"
            android:textColor="@color/primary_text" />
    </LinearLayout>

    <View style="@style/view_divider_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/info_material_type" />

        <View style="@style/view_vertical_divider_style" />

        <EditText
            android:id="@+id/edt_material_type"
            style="@style/style_item_basic_info_edit_text"
            android:layout_width="match_parent"
            android:focusable="false"
            android:textColor="@color/primary_text" />
    </LinearLayout>

    <View style="@style/view_divider_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/info_plant_id" />

        <View style="@style/view_vertical_divider_style" />

        <EditText
            android:id="@+id/edt_plant_id"
            style="@style/style_item_basic_info_edit_text"
            android:layout_width="match_parent"
            android:hint="@string/must_required"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <View style="@style/view_divider_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/investigate_time" />

        <View style="@style/view_vertical_divider_style" />

        <TextView
            android:id="@+id/edt_investigating_time"
            style="@style/style_item_basic_info_edit_text"
            android:layout_width="match_parent" />
    </LinearLayout>

    <View style="@style/view_divider_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_item_short_text_view"
            android:text="@string/investigate_user" />

        <View style="@style/view_vertical_divider_style" />

        <TextView
            android:id="@+id/edt_investigator"
            style="@style/style_item_basic_info_edit_text"
            android:layout_width="match_parent" />
    </LinearLayout>
</LinearLayout>
